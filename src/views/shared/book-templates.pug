mixin formTextField(label, prefix, name, placeholder, required=true)
  label(for=`${prefix}-${name}`)= label
  input(type='text' name=name placeholder=placeholder id=`${prefix}-${name}` required=required)

mixin checkboxField(label, name, value)
  input(type='checkbox' name=name id=`${name}-${value}` value=value)
  label(for=`${name}-${value}`)= label

mixin bookForm(prefix)
  div(class='form-group')
    +formTextField('Title', prefix, 'book-title', 'Enter Title')
    +formTextField('Author', prefix, 'book-author', 'Enter Author')
    +formTextField('Year', prefix, 'book-year', 'Enter Year')

mixin filterBooksForm(legend)
  fieldset(class='filter-books-fieldset')
    legend= legend
    div(class='checkbox-group')
      +checkboxField('Available', 'filter-key', 'available')
      +checkboxField('Unavailable', 'filter-key', 'unavailable')
      +checkboxField('Overdue', 'filter-key', 'overdue')
      +checkboxField('Non-overdue', 'filter-key', 'non-overdue')